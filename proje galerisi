<div class="container">
  <a href="index.html" class="back">← Geri dön</a>

  <h1 id="baslik"></h1>
  <p class="desc" id="aciklama"></p>

  <div id="galeri" class="grid"></div>
</div>

<script>
  // SADECE BURAYA JPG EKLE
  const GALERILER = {
    "celik-villa": {
      baslik: "Çelik Ev Galerisi",
      aciklama: "Çelik villa ve çelik ev projeleri",
      resimler: [
        "galeri/celik-villa/1.jpg",
        "galeri/celik-villa/2.jpg"
      ]
    },
    "prefabrik": {
      baslik: "Prefabrik Ev Galerisi",
      aciklama: "Prefabrik yapı projeleri",
      resimler: [
        "galeri/prefabrik/1.jpg"
      ]
    },
    "konteyner": {
      baslik: "Konteyner Galerisi",
      aciklama: "Konteyner ofis ve yaşam alanları",
      resimler: [
        "galeri/konteyner/1.jpg"
      ]
    }
  };

  const params = new URLSearchParams(window.location.search);
  const kategori = params.get("kategori");

  const data = GALERILER[kategori];

  document.getElementById("baslik").innerText = data?.baslik || "Galeri";
  document.getElementById("aciklama").innerText = data?.aciklama || "";

  const galeri = document.getElementById("galeri");

  if (data && data.resimler.length) {
    data.resimler.forEach(src => {
      galeri.insertAdjacentHTML("beforeend", `
        <div class="item">
          <img src="${src}" alt="">
        </div>
      `);
    });
  }
</script>

</body>
</html>
